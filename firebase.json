{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "site": "start-sass",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5014
    },
    "firestore": {
      "port": 8014
    },
    "hosting": {
      "port": 5014
    },
    "pubsub": {
      "port": 7014
    },
    "ui": {
      "enabled": true
    }
  }
}
